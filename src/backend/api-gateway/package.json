{
  "name": "fpbe-api-gateway",
  "version": "1.0.0",
  "description": "High-performance API Gateway service for FPBE mobile banking application with advanced security and monitoring",
  "main": "dist/index.js",
  "private": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "test": "jest --coverage",
    "test:e2e": "jest --config jest.e2e.config.js",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "security:audit": "npm audit --production",
    "docker:build": "docker build -t fpbe-api-gateway .",
    "health:check": "node scripts/health-check.js",
    "docs:generate": "typedoc src/",
    "performance:test": "artillery run performance-tests/load-test.yml"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.4.1",
    "axios": "^1.3.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^6.9.0",
    "express-validator": "^7.0.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "kong-gateway-client": "^3.2.0",
    "morgan": "^1.10.0",
    "pino": "^8.0.0",
    "prom-client": "^14.0.0",
    "rate-limiter-flexible": "^2.3.0",
    "redis": "^4.6.7",
    "reflect-metadata": "^0.1.13",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/node": "^18.0.0",
    "artillery": "^2.0.0",
    "autocannon": "^7.11.0",
    "eslint": "^8.46.0",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "jest-junit": "^15.0.0",
    "nodemon": "^2.0.22",
    "nock": "^13.0.0",
    "prettier": "^3.0.0",
    "redis-mock": "^0.56.0",
    "rimraf": "^5.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "typedoc": "^0.24.8",
    "typescript": "^4.9.5"
  },
  "author": "FPBE Development Team",
  "license": "UNLICENSED"
}