{
  "name": "@fpbe/pi-service",
  "version": "1.0.0",
  "description": "High-performance Pi Network integration service for FPBE mobile banking application",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:performance": "autocannon -c 100 -d 30 http://localhost:3000/api/health",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "security:audit": "npm audit && snyk test",
    "docker:build": "docker build -t pi-service .",
    "docker:run": "docker run -p 3000:3000 pi-service"
  },
  "dependencies": {
    "@pi-network/sdk": "^1.0.0",
    "axios": "^1.3.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^6.0.0",
    "express-validator": "^7.0.0",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.0",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "pino": "^8.14.1",
    "rate-limiter-flexible": "^2.4.1",
    "redis": "^4.6.7",
    "reflect-metadata": "^0.1.13",
    "winston": "^3.9.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.0.0",
    "@jest/types": "^29.0.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.0.0",
    "autocannon": "^7.11.0",
    "eslint": "^8.40.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-junit": "^15.0.0",
    "nock": "^13.0.0",
    "nodemon": "^2.0.22",
    "redis-mock": "^0.56.0",
    "rimraf": "^5.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.4"
  },
  "author": "FPBE",
  "license": "UNLICENSED"
}