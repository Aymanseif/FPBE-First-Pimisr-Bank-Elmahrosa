{
  "name": "auth-service",
  "version": "1.0.0",
  "description": "Secure authentication microservice for FPBE mobile banking application with multi-factor authentication support",
  "main": "dist/index.js",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:e2e": "jest --config jest.e2e.config.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "prepare": "husky install"
  },
  "dependencies": {
    "express": "^4.17.1",
    "inversify": "^6.0.1",
    "jsonwebtoken": "^9.0.0",
    "bcrypt": "^5.0.0",
    "cors": "^2.8.5",
    "helmet": "^4.6.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.0.0",
    "reflect-metadata": "^0.1.13",
    "rate-limiter-flexible": "^2.4.1",
    "winston": "^3.8.2",
    "express-validator": "^7.0.1",
    "compression": "^1.7.4",
    "express-rate-limit": "^6.0.0",
    "axios": "^1.3.0",
    "ioredis": "^5.3.0",
    "zxcvbn": "^4.4.2"
  },
  "devDependencies": {
    "typescript": "^4.9.0",
    "@types/node": "^18.0.0",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/morgan": "^1.9.3",
    "@types/jest": "^29.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.12",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.0",
    "eslint": "^8.40.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "prettier": "^2.5.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "rimraf": "^5.0.0",
    "nock": "^13.0.0",
    "redis-mock": "^0.56.0",
    "autocannon": "^7.11.0"
  }
}