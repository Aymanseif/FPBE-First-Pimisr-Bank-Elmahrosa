{
  // The most advanced TypeScript config for modern, production-grade apps
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2022",                          // Use latest available ECMAScript target
    "module": "ESNext",                          // Use modern module system
    "lib": ["DOM", "DOM.Iterable", "ESNext"],    // Include DOM & latest JS features
    "allowJs": true,                             // Allow JS files in compilation
    "checkJs": true,                             // Type-check JS files
    "jsx": "react-jsx",                          // Enable React 17+ JSX transform
    "declaration": true,                         // Generate .d.ts files
    "declarationMap": true,                      // Map types to source
    "sourceMap": true,                           // Enable source maps

    /* Strict Type-Checking Options */
    "strict": true,                              // Enable all strict type-checking
    "noImplicitAny": true,                       // Disallow implicit any
    "strictNullChecks": true,                    // Strict null checks
    "strictFunctionTypes": true,                 // Function type variance
    "strictBindCallApply": true,                 // Strict bind/call/apply
    "strictPropertyInitialization": true,        // Class property initialization
    "noImplicitThis": true,                      // Disallow implicit this
    "alwaysStrict": true,                        // Parse in strict mode

    /* Module Resolution Options */
    "moduleResolution": "bundler",               // Ultra-modern resolution
    "esModuleInterop": true,                     // Enable default import compatibility
    "allowSyntheticDefaultImports": true,        // Allow default imports from modules with no default export
    "resolveJsonModule": true,                   // Allow importing .json files
    "isolatedModules": true,                     // Ensure each file can be transpiled independently

    /* Advanced Features */
    "incremental": true,                         // Enable incremental compiles
    "tsBuildInfoFile": "./.tsbuildinfo",         // Store build info for fast rebuilds
    "forceConsistentCasingInFileNames": true,    // Enforce case-sensitive imports
    "noEmitOnError": true,                       // Do not emit output on type errors
    "skipLibCheck": true,                        // Skip type checks on declaration files for speed

    /* Project Structure */
    "rootDir": "./src",                          // Source directory
    "outDir": "./dist",                          // Output directory
    "baseUrl": "./",                             // Base directory for non-relative imports
    "paths": {
      "@/*": ["src/*"]
    },

    /* Linting and Strictness */
    "noFallthroughCasesInSwitch": true,          // Warn on switch fallthrough
    "noUnusedLocals": true,                      // Warn on unused locals
    "noUnusedParameters": true,                  // Warn on unused parameters
    "noImplicitReturns": true,                   // Require return statements
    "noUncheckedIndexedAccess": true,            // Safer array/object access

    /* Experimental */
    "experimentalDecorators": true,              // Enable decorators
    "emitDecoratorMetadata": true                // Emit decorator metadata
  },
  "include": [
    "src",
    "next-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist",
    "build"
  ],
  // Uncomment if you want to reference project references
  // "references": [
  //   { "path": "./tsconfig.base.json" }
  // ]
}
